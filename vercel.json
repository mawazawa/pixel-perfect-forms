{
  "version": 2,
  "buildCommand": "./simple-build.sh",
  "outputDirectory": "app/dist",
  "devCommand": "cd app && cargo check",
  "env": {
    "AI_GATEWAY_API_KEY": "@ai_gateway_api_key"
  },
  "build": {
    "env": {
      "AI_GATEWAY_API_KEY": "@ai_gateway_api_key"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}